-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      %th= link_to "Movie Title", sort_movies_path("title")
      -#%th Movie Title
      %th= link_to "Rating", sort_movies_path("rating")
      -#%th Rating
      %th= link_to "Release Date", sort_movies_path("date")
      -#%th Release Date
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
